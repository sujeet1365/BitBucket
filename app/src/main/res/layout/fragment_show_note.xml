<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="3"
    tools:context=".Fragment.ShowNoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:layout_margin="10dp"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_edit_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_edit_button"/>
        <ImageView
            android:id="@+id/img_delete_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_button"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/image_note"
        android:src="@drawable/ic_picture"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_height="0dp"
        android:layout_weight=".7"/>

    <TextView
        android:id="@+id/tv_note_title"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="Title"/>

    <TextView
        android:id="@+id/tv_note_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.55"
        android:text="Body"
        android:paddingLeft="5dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_noteTimestamp"
        android:layout_width="match_parent"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:layout_height="0dp"
        android:layout_weight=".2"/>


</LinearLayout>